@page
@model tm20trial.Web.Areas.Identity.Pages.Account.ResetPasswordModel
@{
ViewData["Title"] = "Reset your password";
}
<link rel="stylesheet" href="~/Identity/css/show-hide-password.css">
<link rel="stylesheet" href="~/Identity/css/login.css">
<section class="vh-100 main-section">
    <div class="container-fluid h-100">
        <div class="row d-flex main-container justify-content-center align-items-center h-100">
            <div class="col-md-0 col-lg-6 col-xl-8" >
            </div>
            <div class="col-md-12 col-lg-6 col-xl-4 form-container">
                <form class="form" id="account" method="post">

                    <h1 class="text-center"> <span>Trial</span> <span>Classics</span> </h1>
                    <hr />
                    <input asp-for="Input.Code" type="hidden" />
                    <h5>Reset your password </h5>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password"  type="password" id="password"  autocomplete="current-password" placeholder="password"
                               class="form-control input-password rounded" spellcheck="false" autocorrect="off" autocapitalize="off"/>
                        <label asp-for="Input.Password">Password</label>
                        <span role="button" id="toggle-password" type="button" class="padding-top-12">
                            <img id="img-eye-open" src="~/Identity/img/open-eye.svg"/>
                            <img id="img-eye-close" src="~/Identity/img/close-eye.svg" hidden="true"/>
                        </span>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control input-password rounded" id="confirm-password"
                               autocomplete="current-password" placeholder="password" spellcheck="false" autocorrect="off" autocapitalize="off"/>
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span role="button" id="toggle-confirm-password" type="button" class="padding-top-12">
                            <img id="img-eye-open-confirm" src="~/Identity/img/open-eye.svg"/>
                            <img id="img-eye-close-confirm" src="~/Identity/img/close-eye.svg" hidden="true"/>
                        </span>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    @if (Model.PasswordErrors != null && Model.PasswordErrors.Any())
                    {
                        <div class="form-group">
                            <ul class="text-danger">
                                @if (Model.PasswordErrors.Contains("PasswordTooShort"))
                                {
                                    <li>Your password must contain at least 6 characters.</li>
                                }
                                @if (Model.PasswordErrors.Contains("PasswordRequiresUpper"))
                                {
                                <li>Your password must contain at least one capital letter.</li>
                                }
                                @if (Model.PasswordErrors.Contains("PasswordRequiresLower"))
                                {
                                <li>Your password must contain at least one lowercase letter.</li>
                                }
                                @if (Model.PasswordErrors.Contains("PasswordRequiresDigit"))
                                {
                                <li>Your password must contain at least one number.</li>
                                }
                                @if (Model.PasswordErrors.Contains("PasswordRequiresNonAlphanumeric"))
                                {
                                <li>Your password must contain at least one special character.</li>
                                }
                                @if (Model.PasswordErrors.Contains("InvalidToken"))
                                {
                                    <li>Link expire</li>
                                }
                            </ul>
                        </div>
                    }
                    <div class="row justify-content-between align-items-center" id="actions">
                        <div class="col-6">
                            <a asp-page="Login" class="btn btn-secondary">Back</a>
                        </div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary float-right">Send</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript" src="~/Identity/js/show-hide-password.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}