@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-lg-12 col-md-12"></div>
    <div class="col-lg-12 col-md-12">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DisplayName" class="form-control" autocomplete="display-name" aria-required="true" placeholder="display name"/>
                <label asp-for="Input.DisplayName">Display name</label>
                <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LoginUplay" class="form-control" aria-required="false" placeholder="Pseudo123"/>
                <label asp-for="Input.LoginUplay">Login uplay</label>
                <span asp-validation-for="Input.LoginUplay" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.TwitchUsername" class="form-control" aria-required="false" placeholder="twitchUsername"/>
                <label asp-for="Input.TwitchUsername">Twitch Username</label>
                <span asp-validation-for="Input.TwitchUsername" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.TwitterUsername" class="form-control" aria-required="false" placeholder="Twitter Username"/>
                <label asp-for="Input.TwitterUsername">Twitter Username</label>
                <span asp-validation-for="Input.TwitterUsername" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.TmIoId" class="form-control" aria-required="false" placeholder="9dac4817-738d-4eb1-adb2-3ad18ef61ddf"/>
                <label asp-for="Input.TmIoId">Trackmania.Io ID</label>
                <span asp-validation-for="Input.TmIoId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="form-check-input" asp-for="Input.IsMapper" type="checkbox" aria-required="false" />
                <label asp-for="Input.IsMapper">Are you a mapper?</label>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
