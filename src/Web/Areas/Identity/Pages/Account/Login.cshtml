<script type="text/javascript">
    document.onkeypress = keyPress;

    function keyPress(e){
        var x = e || window.event;
        var key = (x.keyCode || x.which);

        if(key == 13 || key == 3)
            document.getElementById("login-submit").click();
    }
</script>