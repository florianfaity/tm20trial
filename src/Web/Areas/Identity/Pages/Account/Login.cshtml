@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/Identity/css/show-hide-password.css">
<link rel="stylesheet" href="~/Identity/css/login.css"> 
<section class="vh-100 main-section">
    <div class="container-fluid h-100">
        <div class="row d-flex main-container justify-content-center align-items-center h-100">
            <div class="col-md-0 col-lg-6 col-xl-8" >
            </div>
            <div class="col-md-12 col-lg-6 col-xl-4 form-container">
                <form class="form" id="account" method="post">

                    <h1 class="text-center"> <span>Trial Classics</span> </h1>
                    <hr />

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" asp-for="Input.Password" for="form3Example4">Password</label>
                        <div class="input-group">
                            <input asp-for="Input.Password" type="password" id="password"  autocomplete="current-password"
                                   class="form-control input-password rounded" spellcheck="false" autocorrect="off" autocapitalize="off">
                            <span role="button" id="toggle-password" type="button" class="pt-1">
                                <img id="img-eye-open" src="~/Identity/img/open-eye.svg" />
                                <img id="img-eye-close" src="~/Identity/img/close-eye.svg" hidden="true" />
                            </span>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                    {
                        <div class="text-danger text-center">
                            <span>@ViewData["ErrorMessage"]</span>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="mb-0">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe"/>&nbsp;
                                @Html.DisplayNameFor(m => m.Input.RememberMe) 
                            </label>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>

                    <div class="text-center mt-4 pt-2">
                        <button id="login-submit" type="submit"  class="btn btn-primary" style="padding-left: 2.5rem; padding-right: 2.5rem;">Log in</button>
                    </div>
                    <p> 
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a> 
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>

    
    
